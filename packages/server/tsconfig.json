{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "lib": ["ESNext", "DOM"],
    "jsx": "react",
    "outDir": "./dist",
    "rootDir": "./src",
    "downlevelIteration": true,
    "resolveJsonModule": true,
    "target": "ES2021",
    "skipLibCheck": true,
    "types": ["node"],
    "moduleResolution": "bundler",
    "declaration": true,
    "module": "commonjs",          // Important for Node compatibility
    "esModuleInterop": true,       // Also helpful for compatibility
    "sourceMap": true              // Optional: useful for debugging
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules"]
}
