{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "lib": ["ESNext", "DOM"],
    "jsx": "react",
    "outDir": "./dist",
    "rootDir": "./src",
    "downlevelIteration": true,
    "resolveJsonModule": true,
    "target": "ES2021",
    "skipLibCheck": true,
    "types": ["node"],
    "moduleResolution": "bundler"
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
