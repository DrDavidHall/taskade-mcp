{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "composite": false,
    "target": "ES2021",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "downlevelIteration": true,

    "sourceMap": true,

    // ðŸ”’ Force JS emission even if the root tsconfig tries to suppress it
    "noEmit": false,
    "emitDeclarationOnly": false,

    // You can turn this back on later if you need .d.ts files
    "declaration": false
  },
  "include": ["src/index.ts", "src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
