{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "emitDeclarationOnly": true,
    "composite": true,
    "lib": ["ESNext", "DOM"],
    "jsx": "react",
    "outDir": "./lib",
    "rootDir": "./src",
    "downlevelIteration": true,
    "resolveJsonModule": true,
    "target": "ES2021",
    "skipLibCheck": true,
    "types": [
      "node"
    ],
    "moduleResolution": "bundler"
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": ["node_modules", "./dist/**/*",  "./lib/**/*"],
}
