{
  "name": "@taskade/mcp-server",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "main": "src/http.ts",
  "bin": {
    "taskade-mcp-server": "bin/cli.mjs"
  },
  "scripts": {
    "dev": "tsx src/http.ts --watch",
    "start": "tsx src/http.ts",
    "build": "run-s generate:taskade-mcp-tools build:cli",
    "build:cli": "tsx scripts/build-cli.ts",
    "generate:taskade-mcp-tools": "tsx scripts/gen-taskade-mcp-tools.ts",
    "lint": "eslint . --ext .ts",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@readme/openapi-parser": "^2.0.0",
    "@taskade/mcp-openapi-codegen": "*"
  },
  "devDependencies": {
    "tsx": "^4.0.0",
    "typescript": "^5.0.0",
    "eslint": "^9.0.0",
    "esbuild": "^0.20.0"
  }
}
